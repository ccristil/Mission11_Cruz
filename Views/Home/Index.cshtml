@{
    ViewData["Title"] = "Home Page";
}

@model BookListViewModel;

<div class="m-5 text-center">
    <h1 class="display-2">Welcome to the Bookstore📚</h1>
    <h5 class="">Home of the Spencer Hilton Collection of Books</h5>
</div>

<div class="container">
    @foreach (Book b in Model.Books)
    {
        <partial name="BookSummary" model="b" />
    }
</div>

<div page-model="@Model.PaginationInfo" page-action="Index" page-class="btn" page-classes-enabled="true"
     page-class-normal="btn-outline-dark" page-class-selected="btn-primary" class="btn-group pull-right m-2">
    
</div>